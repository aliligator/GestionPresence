<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vueEtudiant</servlet-name>
        <jsp-file>/jsp/vueEtudiant.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>vueEnseignant</servlet-name>
        <jsp-file>/jsp/vueEnseignant.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletConfirmAppel</servlet-name>
        <servlet-class>servlets.ServletConfirmAppel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAppel</servlet-name>
        <servlet-class>servlets.ServletAppel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>alertConfirm</servlet-name>
        <jsp-file>/alertConfirm.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ConsulterAppel</servlet-name>
        <jsp-file>/jsp/ConsulterAppel.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>vueResponsable</servlet-name>
        <jsp-file>/jsp/vueResponsable.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AffecterEtudiant</servlet-name>
        <jsp-file>/jsp/AffecterEtudiant.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ImportationDonnees</servlet-name>
        <jsp-file>/jsp/importationDonnees.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vueEtudiant</servlet-name>
        <url-pattern>/vueetu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vueEnseignant</servlet-name>
        <url-pattern>/vueenseig</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConfirmAppel</servlet-name>
        <url-pattern>/confirmAppel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAppel</servlet-name>
        <url-pattern>/servletAppel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>alertConfirm</servlet-name>
        <url-pattern>/alertConfirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsulterAppel</servlet-name>
        <url-pattern>/consulter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vueResponsable</servlet-name>
        <url-pattern>/vuerespon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AffecterEtudiant</servlet-name>
        <url-pattern>/affectergroupe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportationDonnees</servlet-name>
        <url-pattern>/importdonnees</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
